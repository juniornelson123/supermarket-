<%- model_class = ShoppingList -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:establishment) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @shopping_lists.each do |shopping_list| %>
      <tr>
        <td><%= shopping_list.name %></td>
        <td>
        
           <%= link_to 'show', "/site/establishments/#{ shopping_list.establishment_id }/shopping_lists/#{ shopping_list.id }/product_shopping_lists", class: 'btn btn-primary btn-xs' %>
       
          <%= link_to 'continuar listando', "/site/establishments/#{shopping_list.establishment_id }/continue/#{shopping_list.id}", class: "btn btn-primary btn-xs" %>
       
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_site_establishment_shopping_list_path(id: shopping_list.id), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      site_establishment_shopping_list_path(id: shopping_list.id),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_site_establishment_shopping_list_path,
            :class => 'btn btn-primary' %>
