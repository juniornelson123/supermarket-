<%= simple_form_for @product_shopping_list, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :product_id %>
  <%= error_span(@product_shopping_list[:product_id]) %>
  <%= f.input :shopping_list_id %>
  <%= error_span(@product_shopping_list[:shopping_list_id]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                product_shopping_lists_path, :class => 'btn btn-default' %>
<% end %>
