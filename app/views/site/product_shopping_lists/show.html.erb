<%- model_class = ProductShoppingList -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:product_id) %>:</strong></dt>
  <dd><%= @product_shopping_list.product_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:shopping_list_id) %>:</strong></dt>
  <dd><%= @product_shopping_list.shopping_list_id %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              product_shopping_lists_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_product_shopping_list_path(@product_shopping_list), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              product_shopping_list_path(@product_shopping_list),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
